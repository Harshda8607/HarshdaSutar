<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.Profile">

<RelativeLayout
    android:id="@+id/backprofile"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="-60dp"
    android:background="@drawable/profile_back"/>
    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MY PROFILE"
        style="@style/Title"
        android:textColor="@color/black"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp" />

    <ImageView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_setting"
        android:layout_marginStart="300dp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        android:layout_marginTop="70dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp"
        android:layout_marginTop="-100dp"
        android:layout_below="@id/backprofile">
        <androidx.cardview.widget.CardView
            android:id="@+id/abc1"
            android:layout_width="match_parent"
            android:layout_height="460dp"
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/white">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/green_icon"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp" />


                <TextView
                    android:id="@+id/value_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@drawable/text_bg"
                    android:padding="10dp"
                    android:layout_below="@id/profile_username"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/profile_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/green_icon"
                    android:textStyle="bold"
                    android:layout_below="@id/value_username"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/value_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:background="@drawable/text_bg"
                    android:padding="10dp"
                    android:layout_below="@id/profile_email"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/profile_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:drawableStart="@drawable/baseline_phone_24"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/green_icon"
                    android:textStyle="bold"
                    android:layout_below="@id/value_email"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/value_mobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@drawable/text_bg"
                    android:padding="10dp"
                    android:layout_below="@id/profile_mobile"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/profile_height"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Height"
                    android:drawableStart="@drawable/ic_height"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/green_icon"
                    android:textStyle="bold"
                    android:layout_below="@id/value_mobile"
                    android:layout_marginTop="30dp" />

                <TextView
                    android:id="@+id/value_height"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@drawable/text_bg"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:layout_toEndOf="@id/profile_height"
                    android:layout_alignBaseline="@id/profile_height"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />

                <TextView
                    android:id="@+id/profile_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Weight"
                    android:drawableStart="@drawable/ic_weight"
                    android:drawablePadding="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/green_icon"
                    android:textStyle="bold"
                    android:layout_below="@id/profile_height"
                    android:layout_marginTop="35dp" />

                <TextView
                    android:id="@+id/value_weight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="JohnDoe"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:background="@drawable/text_bg"
                    android:layout_marginStart="20dp"
                    android:padding="10dp"
                    android:layout_toEndOf="@id/profile_weight"
                    android:layout_alignBaseline="@id/profile_weight"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp" />


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:layout_below="@id/abc1"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </RelativeLayout>



</RelativeLayout>
