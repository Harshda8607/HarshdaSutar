<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".break_rest"
    android:layout_centerHorizontal="true"
    android:background="@drawable/background">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rest"
        android:text="TAKE A BREAK"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"/>
    <TextView
        android:id="@+id/timer"
        android:layout_below="@id/rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:30"
        android:textColor="#000000"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp" />


        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#32056F60"
            android:layout_marginStart="60dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/timer">
            <RelativeLayout
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/option_background2">
            <TextView
                android:id="@+id/sec_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+20s"
                android:layout_centerInParent="true"
                android:textSize="30sp"
                android:textColor="@color/black" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/csec_20_2"
            android:layout_width="120dp"
            android:layout_height="60dp"
            app:cardCornerRadius="20dp"
            android:backgroundTint="#32056F60"
            android:layout_marginStart="200dp"
            android:layout_marginTop="25dp"
            android:layout_below="@id/timer">
            <RelativeLayout
                android:id="@+id/pau"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:background="@drawable/option_background2">
            <TextView
                android:id="@+id/sec_20_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-20s"
                android:textSize="30sp"
                android:textColor="@color/black"
                android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cplay"
        android:layout_width="200dp"
        android:layout_height="60dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="#36C1B4"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/csec_20_2"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="PAUSE"
                android:textSize="25sp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>