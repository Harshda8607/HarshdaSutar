<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/background"
    android:padding="18dp">

    <ImageView
        android:id="@+id/img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/main_img" />

    <TextView
        android:id="@+id/fit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FIT"
        android:textSize="72sp"
        android:fontFamily=""
        android:textStyle="bold"
        android:textColor="@color/green_icon"
        android:layout_marginTop="150dp"
        android:layout_marginStart="70dp"
        />
    <TextView
        android:id="@+id/life"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#002AC3"
        android:layout_toEndOf="@id/fit"
        android:layout_marginTop="165dp"/>
    <TextView
        android:id="@+id/health"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/green_icon"
        android:layout_toEndOf="@id/fit"
        android:layout_below="@id/life"
        android:layout_marginTop="-10dp"/>

    <TextView
        android:id="@+id/quote1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/fit"
        android:text="@string/main1"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="17sp" />
    <TextView
        android:id="@+id/quote2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/quote1"
        android:text="@string/main2"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="17sp" />
</RelativeLayout>