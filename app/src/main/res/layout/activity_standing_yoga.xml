<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".standing_yoga"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:orientation="vertical"
        android:background="@drawable/training_standingyoga">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/linear2">
        <TextView
            android:id="@+id/textfull"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="SIMPLE STANDING YOGA"
            android:textColor="@color/black"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:fontFamily="serif"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/fullbody_desc"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/standyoga"
            android:layout_below="@id/textfull"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:textSize="16sp" />
        <ImageView
            android:id="@+id/alarm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_alarm_24"
            android:layout_below="@id/fullbody_desc"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/minutes_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7 minutes"
            android:textColor="@color/black"
            android:layout_below="@id/fullbody_desc"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/alarm"
            android:layout_marginStart="10dp"
            android:layout_marginTop="18dp"/>
        <ImageView
            android:id="@+id/walk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/outline_directions_walk_24"
            android:layout_below="@id/alarm"
            android:layout_marginTop="13dp"
            android:layout_marginStart="20dp"/>
        <TextView
            android:id="@+id/workouts_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="12 Workouts"
            android:layout_below="@id/minutes_1"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_toEndOf="@id/alarm"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/standyoga_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="START"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/workouts_1"
            android:textStyle="bold"
            android:layout_marginTop="110dp"
            android:backgroundTint="#2B9BA8"/>
    </RelativeLayout>


</RelativeLayout>