<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_dialog"
    android:gravity="center_horizontal">


    <!-- Emoji -->
    <ImageView
        android:id="@+id/imgEmoji"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_happy_emoji"
        android:layout_marginBottom="12dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'd be greatful if you couldspend a minute to rate and review "
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginBottom="6dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/txtSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'd love to hear your feedback."
        android:textSize="20sp"
        android:textColor="#555555"
        android:layout_marginBottom="8dp" />

    <!-- Extra text -->
    <TextView
        android:id="@+id/txtExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The best we can get :)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#04D7C6"
        android:layout_marginBottom="12dp" />

    <!-- Star Rating Row -->
    <LinearLayout
        android:id="@+id/starLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:clickable="true" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:clickable="true" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:clickable="true" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:clickable="true" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star_outline"
            android:clickable="true" />
    </LinearLayout>

    <!-- Rate Button -->
    <Button
        android:id="@+id/Rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RATE"
        android:backgroundTint="@color/green_icon"
        android:textSize="27dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:textColor="@color/white" />

</LinearLayout>