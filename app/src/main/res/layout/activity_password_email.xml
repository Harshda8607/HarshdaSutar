<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".password_email"
    android:padding="20dp"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:textSize="35sp"
        style="@style/Title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:id="@+id/forgotimg"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/forgot"
        android:layout_below="@id/reset"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/texteneter"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="Enter a Email Id"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
        android:layout_below="@id/forgotimg"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/pass_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email Id"
        app:hintTextColor="@color/green_icon"
        android:layout_below="@id/texteneter"
        app:counterMaxLength="20"
        android:layout_centerHorizontal="true"
        app:endIconMode="clear_text"
        app:endIconTint="@color/green_icon"
        android:layout_marginTop="20dp"
        app:boxStrokeErrorColor="@color/red"
        app:counterOverflowTextColor="@color/red"
        app:errorTextColor="@color/red"
        app:boxStrokeWidth="2dp"
        app:boxStrokeColor="@color/green_icon">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass_email_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@color/black"
            android:drawableStart="@drawable/baseline_email_24"
            android:drawablePadding="15dp"
            style="@style/EditText"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="NEXT"
        style="@style/Title"
        android:textSize="20dp"
        android:backgroundTint="@color/green_icon"
        android:textColor="#FFFFFF"
        android:elevation="0dp"
        android:padding="12dp"
        android:layout_below="@id/pass_email_layout"
        android:layout_marginTop="50dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light" />
</RelativeLayout>