<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/white">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let us know you better"
        android:textSize="25sp"
        android:textStyle="bold"
        style="@style/goal_text"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Let us know you better to help boost your workout results"
        android:layout_marginTop="7dp"
        style="@style/text"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"/>

    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/white"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weight"
            style="@style/goal_text"
            android:textSize="20sp"
            android:layout_marginStart="20dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"/>
        <Switch
            android:id="@+id/switchWeightUnit"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:text="lbs"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:thumbTint="@color/green_icon"
            android:textSize="18sp"
            android:checked="true"/>

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="143 lbs"
            style="@style/text"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="-10dp"/>

        <SeekBar
            android:id="@+id/weightSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="200"
            android:layout_marginTop="130dp"
            android:padding="10dp"
            android:progressTint="@color/green_icon"
            android:thumbTint="@color/green_icon"
            android:progressBackgroundTint="@color/black"/>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="320dp"
        android:layout_marginTop="40dp"
        android:layout_height="200dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/white"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Height"
            style="@style/goal_text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>


        <Switch
            android:id="@+id/switchHeightUnit"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:text="ft"
            android:layout_marginStart="250dp"
            android:thumbTint="@color/green_icon"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginTop="40dp"
            android:checked="true"/>
        <TextView
            android:id="@+id/tvHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="143 cm"
            android:layout_marginTop="-10dp"
            style="@style/text"
            android:layout_gravity="center"
            android:textSize="22sp"
            android:textStyle="bold" />



        <SeekBar
            android:id="@+id/heightSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="250"
            android:layout_marginTop="130dp"
            android:padding="10dp"
            android:progressTint="@color/green_icon"
            android:thumbTint="@color/green_icon"
            android:progressBackgroundTint="@color/black"/>

    </androidx.cardview.widget.CardView>


    <Button
        android:id="@+id/btndone_hw"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="Done"
        style="@style/text"
        android:layout_gravity="center"
        android:textSize="18sp"
        android:backgroundTint="#61D0C3"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="60dp"/>
</LinearLayout>

