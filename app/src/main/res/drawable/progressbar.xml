<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/progress_background">
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <solid android:color="#D4D7D6"/>
        </shape>
    </item>

    <item android:id="@+id/progress_line">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="20dp"/>
                <solid android:color="@color/green_icon"/>
            </shape>
        </clip>
    </item>

</layer-list>